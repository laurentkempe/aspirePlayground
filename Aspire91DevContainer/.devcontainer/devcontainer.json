{
    "name": ".NET Aspire",
    // ğŸ‘‡ğŸ¼ Use .NET 9 Debian image
    "image": "mcr.microsoft.com/devcontainers/dotnet:dev-9.0-bookworm",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/powershell:1": {},
    },

    // ğŸ‘‡ğŸ¼ This is not supported by Rider but it is supported by VS Code 
    "hostRequirements": {
        "cpus": 8,
        "memory": "32gb",
        "storage": "64gb"
    },

    // ğŸ‘‡ğŸ¼ Install .NET Aspire project templates, run inside the container 
    // immediately after it has started for the first time
	"onCreateCommand": "dotnet new install Aspire.ProjectTemplates::9.1.0 --force",
    // ğŸ‘‡ğŸ¼ Restore nugets, when the container is created
	"postCreateCommand": "dotnet restore",
    // ğŸ‘‡ğŸ¼ Trusting the development certificates, run each time the
    // container is successfully started
    "postStartCommand": "dotnet dev-certs https --trust",
    "customizations": {
        "jetbrains": {
            "settings": {
            }
            , "plugins" : [
            ],
        },
    "vscode": {
            "extensions": [
                "ms-dotnettools.csdevkit",
                "GitHub.copilot-chat",
                "GitHub.copilot"
            ]
        }
    }
}
